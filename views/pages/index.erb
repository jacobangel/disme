<script type="text/x-handlebars" data-template-name="resume">
  <h1>{{name}}</h1>
  <h2>{{address}}</h2>
  <h2>{{email}}</h2>
  <h2>{{phone}}</h2>
  <h3>Position</h3>
  {{#each position in jobs}}
    <div class='job'>
      <p><strong>{{position.title}}</strong>, {{position.date}}</p>
      <ul>
      {{#each  item in position.bullets}}
        <li>{{item}}</li>
      {{/each}}
      </ul>
    </div>
  {{/each}}
</script>

<script type="text/x-handlebars" data-template-name="contact">
    <h1>Contact</h1>
    <form method='POST' action='/contact' class='form-horizontal'>
      <div class='control-group'>
        <label class="control-label" for="inputEmail">Name</label>
        <div class="controls">
          <input type="text" id="name" placeholder="How are you called?">
        </div>
      </div>
      <div class='control-group'>
        <label class="control-label" for="email">Email</label>
        <div class="controls">
          <input type="text" id="email" placeholder="Email">
        </div>
      </div>
      <div class='control-group'>
        <label class="control-label" for="subject">Subject</label>
        <div class="controls">
          <input type="text" id="subject" placeholder="Make it punchy">
        </div>
      </div> 
      <div class='control-group'>
        <label class="control-label" for="inputEmail">Email</label>
        <div class="controls">
          <textarea id="body" placeholder="Your message"></textarea>
        </div>
      </div> 
      <div class='control-group'>
        <label class="control-label" for="subject">Type 'hoop' backwards please.</label>
        <div class="controls">
          <input type="text" id="secret_code" placeholder="Are you human?">
        </div>
      </div> 
      <div class='control-group'>
        <div class="controls">
          <button type='submit' class='btn'>Email Me</button>
        </div>
      </div> 
      </form>
</script>

